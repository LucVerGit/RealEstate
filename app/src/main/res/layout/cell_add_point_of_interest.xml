<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/point_of_interest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/large_padding"
        android:ellipsize="end"
        android:lines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/darkText"
        app:drawableStartCompat="@drawable/ic_arrow_right_24"
        app:drawableTint="@color/darkText"
        app:layout_constraintEnd_toStartOf="@id/delete_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Type: address" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_delete_24"
        android:tint="@color/primaryDarkColor"
        app:layout_constraintBottom_toBottomOf="@id/point_of_interest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/point_of_interest"
        app:layout_constraintTop_toTopOf="@id/point_of_interest" />

</androidx.constraintlayout.widget.ConstraintLayout>